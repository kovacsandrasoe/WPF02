<Window x:Class="_03_EventTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03_EventTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MouseLeftButtonDown="Window_MouseLeftButtonDown" PreviewMouseLeftButtonDown="Window_PreviewMouseLeftButtonDown">
    <Grid MouseLeftButtonDown="Window_MouseLeftButtonDown" PreviewMouseLeftButtonDown="Window_PreviewMouseLeftButtonDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label Content="alma" Margin="30" MouseLeftButtonDown="Window_MouseLeftButtonDown" PreviewMouseLeftButtonDown="Window_PreviewMouseLeftButtonDown" />
        <ListBox x:Name="lbox" Grid.Column="1" />
    </Grid>
</Window>
